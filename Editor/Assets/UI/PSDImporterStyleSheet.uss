:root
{
    --collapse-icon-width : 18px;
    --collapse-icon-height : 18px;
    --warning-icon: resource("Icons/console.warnicon.png");
}

.psdimporter-editor-dark:root
{
    --layer-separated-icon: resource("Packages/com.unity.2d.psdimporter/Editor/Assets/Icons/Dark/Layers Separated@16x.png");
    --layer-collapsed-icon: resource("Packages/com.unity.2d.psdimporter/Editor/Assets/Icons/Dark/Layers Collapsed@16x.png");
    --layer-mixed-icon: resource("Packages/com.unity.2d.psdimporter/Editor/Assets/Icons/Dark/Layers Mixed@16x.png");
    --checkmark-icon: resource("UIPackageResources/Images/d_checkmark.png");
}

.psdimporter-editor-light:root
{
    --layer-separated-icon: resource("Packages/com.unity.2d.psdimporter/Editor/Assets/Icons/Light/Layers Separated@16x.png");
    --layer-collapsed-icon: resource("Packages/com.unity.2d.psdimporter/Editor/Assets/Icons/Light/Layers Collapsed@16x.png");
    --layer-mixed-icon: resource("Packages/com.unity.2d.psdimporter/Editor/Assets/Icons/Light/Layers Mixed@16x.png");
    --checkmark-icon: resource("UIPackageResources/Images/checkmark.png");
}

#Root {
    margin-left : -15px
}

